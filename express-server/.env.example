# Express Server Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://admin:change_this_password@postgres:5432/myapp

# File Storage (S3/MinIO)
S3_ENDPOINT=https://s3.example.com
S3_BUCKET=uploads
S3_ACCESS_KEY=your_minio_access_key
S3_SECRET_KEY=your_minio_secret_key

# Image Processing (Imgproxy)
IMGPROXY_BASE_URL=https://img.example.com
IMGPROXY_KEY=your_64_char_hex_key
IMGPROXY_SALT=your_64_char_hex_salt

# Authentication
JWT_SECRET=your_jwt_secret_key_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100